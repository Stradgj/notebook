        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_5 | image_url}}">
        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_6 | image_url}}">
        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_7 | image_url}}">
        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_8 | image_url}}">
        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_9 | image_url}}">
        </div>
    </div>
    <div class="ig-button_container">
    <a class="red-btn" href="{{ section.settings.inst }}"><span>{{ section.settings.button-text }}</span></a>
    </div>
</div>

