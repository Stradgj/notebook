
{% style %}
    .header_container{
        display: flex;
        align-items:center;
        flex-direction: column;
        text-align:center;
    }
    .header_container h2{
        font-size:150px !important;
        line-height:1;
    }
    .instagram-grid{
        margin:60px 100px 50px;
        display:grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        gap:5px;
        line-height: 0 !important;
    }
    .instagram-section{
        display:flex;
        flex-direction:column;
        align-items:center;
    }
    .instagram-post{
        max-width:500px;
    }
    .instagram-post img{
        width:100px;
    }
    .instagram-section .red-btn{
        padding: 23px 121px;
    }
{% endstyle %}
<div class="instagram-section">
    <div class="header_container">
    {{ section.settings.header }}
    </div>
    <div class="instagram-grid">
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_1 | image_url }}">
        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_2| image_url}}">
        </div>
        <div class="instagram-post">
            <img loading="lazy" src="{{ section.settings.image_3 | image_url}}">
        </div>
        <div class="instagram-post">
