{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}

{%- endstyle -%}

<footer>
  {% for block in section.blocks %}
    {% if block.type == "column" %}
      <div class="footer_column">
      <h4 class="cursive-text red footer-colunm_header">{{ block.settings.menu.title }}</h4>
      <ul class="footer-links">
      {% for link in block.settings.menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
      </div>
      {% endif %}
    {% if block.type == "logo" %}
      <div class="footer_column">
        <div class="footer-logo">
          <img height="80px" width="160px" src="{{ block.settings.logo | image_url }}">
        </div>
      </div>
      {% endif %}
    {% endfor %}
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "blocks": [
    {
      "type": "column",
      "name": "column",
      "limit":3,
      "settings": [
        {
          "type": "header",
          "content": "Select menu"
        },
        {
          "type":"link_list",
          "id":"menu",
          "label": "Links" 
        },
      ]
    },
    {
      "type": "logo",
      "name": "logo",
      "limit":1,
      "settings": [
        {
          "type":"image_picker",
          "id":"logo",
          "label": "Logo"  
        },
      ]
    }
  ],
  "settings": [
  ],
  "default": {
  }
}
{% endschema %}
